<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alriftech.rcalc.CalcActivity">

    <EditText
        android:id="@+id/txtNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_x="1dp"
        android:layout_y="12dp"

        android:ems="10"
        android:enabled="false"
        android:gravity="center_vertical"
        android:inputType="textPersonName"
        android:maxLength="16"
        android:padding="10dp"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp"
        android:typeface="serif"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_below="@+id/RelativeLayout2"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btnKoma"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_x="10dp"
            android:layout_y="434dp"
            android:text="." />

        <Button
            android:id="@+id/btn0"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_x="94dp"
            android:layout_y="434dp"
            android:text="0"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btnKoma" />

        <Button
            android:id="@+id/btnHasil"
            android:layout_width="170dp"
            android:layout_height="85dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn0"
            android:layout_x="264dp"
            android:layout_y="434dp"
            android:text="=" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="85dp"
        android:id="@+id/RelativeLayout2"
        android:layout_below="@+id/RelativeLayout3"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btn1"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_x="10dp"
            android:layout_y="348dp"
            android:text="1"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_x="94dp"
            android:layout_y="348dp"
            android:text="2"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn1" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_x="180dp"
            android:layout_y="348dp"
            android:text="3"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn2" />

        <Button
            android:id="@+id/btnTambah"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_x="264dp"
            android:layout_y="348dp"
            android:text="+"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn3" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="85dp"
        android:id="@+id/RelativeLayout3"
        android:layout_below="@+id/RelativeLayout4"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btn4"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_x="10dp"
            android:layout_y="264dp"
            android:text="4" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_x="94dp"
            android:layout_y="264dp"
            android:text="5"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn4" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_x="180dp"
            android:layout_y="264dp"
            android:text="6"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn5" />

        <Button
            android:id="@+id/btnMin"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_x="264dp"
            android:layout_y="264dp"
            android:text="-"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn6" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout4"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_below="@+id/RelativeLayout5"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btn7"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_x="10dp"
            android:layout_y="178dp"
            android:text="7" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn7"
            android:layout_x="94dp"
            android:layout_y="178dp"
            android:text="8" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn8"
            android:layout_x="180dp"
            android:layout_y="178dp"
            android:text="9" />

        <Button
            android:id="@+id/btnBagi"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn9"
            android:layout_x="264dp"
            android:layout_y="178dp"
            android:text="/" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout5"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/txtNumber"
        android:layout_alignParentEnd="true">

        <Button
            android:id="@+id/btnBackspace"
            android:layout_width="169dp"
            android:layout_height="85dp"
            android:layout_x="96dp"
            android:layout_y="94dp"
            android:text="Backspace" />

        <Button
            android:id="@+id/btnHapus"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btnBackspace"
            android:layout_x="180dp"
            android:layout_y="434dp"
            android:text="C" />

        <Button
            android:id="@+id/btnKali"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btnHapus"
            android:layout_x="264dp"
            android:layout_y="94dp"
            android:text="X" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_x="14dp"
        android:layout_y="586dp"
        android:text="H1D015004"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/RelativeLayout1" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@+id/textView3"
        android:layout_x="102dp"
        android:layout_y="587dp"
        android:text="M. Rifqi Saiful Ammar Haikal" />

</RelativeLayout>